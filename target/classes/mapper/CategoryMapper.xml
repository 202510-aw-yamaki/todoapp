<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.todo.repository.CategoryMapper">

    <select id="findAll" resultType="com.example.todo.entity.Category">
        SELECT id, name, color
        FROM category
        ORDER BY id ASC
    </select>

    <select id="findById" resultType="com.example.todo.entity.Category">
        SELECT id, name, color
        FROM category
        WHERE id = #{id}
    </select>

</mapper>
