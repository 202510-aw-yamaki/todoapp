<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.todo.repository.TodoHistoryMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO todo_history (todo_id, editor_user_id, edited_at, note)
        VALUES (#{todoId}, #{editorUserId}, #{editedAt}, #{note})
    </insert>

    <delete id="deleteByTodoId">
        DELETE FROM todo_history
        WHERE todo_id = #{todoId}
    </delete>

</mapper>
